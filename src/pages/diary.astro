---
import Layout from '../layouts/Page.astro'
import Container from '../components/Container.astro';
import DiaryList from '../components/DiaryList.astro';
import { settings } from '../data/settings'

const diaries = (await Astro.glob('./diary/*.{md,mdx}')).sort(
	(a, b) => new Date(b.frontmatter.publishedAt).valueOf() - new Date(a.frontmatter.publishedAt).valueOf()
);

const seo = {
  title: settings.title,
  description: settings.description,
}
---

<style>
  .home-hero-text__container {
    padding: 5vh 0;
  }
  h1 {
    text-align: center;
  }
</style>

<Layout seo={seo}>
  <Container>
    <div class="home-hero-text__container">
      <h1 class="fade-in">Che's Diary</h1>
    </div>
    <DiaryList diaries={diaries}/>
  </Container>
</Layout>

