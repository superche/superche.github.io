---
const {tweet} = Astro.props;
import {formatDate} from '../utils/helpers'

const usePublicImages = !tweet.frontmatter.image?.startsWith('https://');

---

<article class="tweet-preview__article">
  <div class="tweet-preview__text">
    {tweet.frontmatter?.category && <p class="tweet-preview__category">{tweet.frontmatter.category}</p>}
    <strong>{tweet.frontmatter.title}</strong>
    <p class="tweet-preview__date">{formatDate(tweet.frontmatter.pubDate)}</p>
  </div>
</article>
</a>
  
<style>
.tweet-preview__link {
  text-decoration: none;
}
.tweet-preview__link:hover .tweet-preview__img {
  box-shadow: rgba(0, 0, 0, 0.1) 0 10px 20px 0;
  transform: scale(1.1);
}
.tweet-preview__link:hover .tweet-preview__text {
  transform: translateX(0.5rem);
}
.tweet-preview__article {
  display: grid;
  align-items: center;
}
.tweet-preview__text {
  transition: transform 0.2s ease-in-out;
}
.tweet-preview__category {
  width: fit-content;
  padding: 0.25rem 0.75rem;
  background-color: var(--theme-surface-1);
  border-radius: 2rem;
  margin-bottom: 0.5rem;
  font-size: var(--step--2);
  /* color: #666; */
}
.tweet-preview__text h2{
  font-size: var(--step-1);
}
.tweet-preview__img {
  width: 250px;
  height: 160px;
  object-fit: cover;
  border-radius: 1rem;
  transition: box-shadow 0.2s ease-in-out, transform 0.2s ease-in-out;
}
.tweet-preview__date {
  font-size: var(--step--1);
  color: #666;
}
@media (max-width: 768px) {
  .tweet-preview__article {
    grid-template-columns: 1fr;
  }
  .tweet-preview__img {
    aspect-ratio: 16/9;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .tweet-preview__text {
    margin-top: 1rem;
  }
  .tweet-preview__link:hover .tweet-preview__img {
    box-shadow: none;
    transform: none;
  }
  .tweet-preview__link:hover .tweet-preview__text {
    transform: none;
  }
}
</style>