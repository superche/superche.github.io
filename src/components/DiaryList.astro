---
import DiaryPreview from "./DiaryPreview.astro";

const {diaries} = Astro.props;
---

<ul>
  {diaries.filter((diary) => !diary.frontmatter.draft).map((diary) => (
    <li>
      <DiaryPreview diary={diary} />
    </li>
  ))}
</ul>

<style>
  ul {
    margin: 0 0 10vh 0;
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }
</style>
