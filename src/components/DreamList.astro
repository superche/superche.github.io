---
import DreamPreview from "./DreamPreview.astro";

const {dreams} = Astro.props;
---

<ul>
  {dreams.filter((dream) => !dream.frontmatter.draft).map((dream) => (
    <li>
      <DreamPreview dream={dream} />
    </li>
  ))}
</ul>

<style>
  ul {
    margin: 0 0 10vh 0;
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }
</style>
